
        "# Task class with Builder Pattern\n",
        "class Task:\n",
        "    def __init__(self, description, due_date=None):\n",
        "        self.description = description\n",
        "        self.completed = False\n",
        "\n",
        "\n",
        "    def mark_as_completed(self):\n",
        "        self.completed = True\n",
        "\n",
        "    def mark_as_pending(self):\n",
        "        self.completed = False\n",
        "\n",
        "    def __str__(self):\n",
        "        status = \"Completed\" if self.completed else \"Pending\"\n",
        "        return f\"Description: {self.description}, Status: {status}\"\n",
        "\n",
        "# To-Do List Manager class\n",
        "class ToDoListManager:\n",
        "    def __init__(self):\n",
        "        self.tasks = []\n",
        "        self.undo_stack = []\n",
        "        self.redo_stack = []\n",
        "\n",
        "    def add_task(self, task):\n",
        "        self.tasks.append(task)\n",
        "        self.save_state()\n",
        "\n",
        "    def mark_task_as_completed(self, task):\n",
        "        task.mark_as_completed()\n",
        "        self.save_state()\n",
        "\n",
        "    def mark_task_as_pending(self, task):\n",
        "        task.mark_as_pending()\n",
        "        self.save_state()\n",
        "\n",
        "    def delete_task(self, task):\n",
        "        self.tasks.remove(task)\n",
        "        self.save_state()\n",
        "\n",
        "    def get_tasks(self, show_completed=True):\n",
        "        if show_completed:\n",
        "            return self.tasks\n",
        "        else:\n",
        "            return [task for task in self.tasks if not task.completed]\n",
        "\n",
        "    def save_state(self):\n",
        "        self.undo_stack.append(self.tasks.copy())\n",
        "        self.redo_stack.clear()\n",
        "\n",
        "# Main function\n",
        "if __name__ == \"__main__\":\n",
        "    to_do_list_manager = ToDoListManager()\n",
        "\n",
        "    while True:\n",
        "        print(\"\\nOptions:\")\n",
        "        print(\"1. Add Task\")\n",
        "        print(\"2. Mark Task as Completed\")\n",
        "        print(\"3. Mark Task as Pending\")\n",
        "        print(\"4. Delete Task\")\n",
        "        print(\"5. View All Tasks\")\n",
        "        print(\"6. View Pending Tasks\")\n",
        "        print(\"7. Quit\")\n",
        "\n",
        "        choice = input(\"Enter your choice: \")\n",
        "\n",
        "        if choice == \"1\":\n",
        "            description = input(\"Enter task description: \")\n",
        "            task = Task(description)\n",
        "            to_do_list_manager.add_task(task)\n",
        "            print(\"Task added successfully!\")\n",
        "\n",
        "        elif choice == \"2\":\n",
        "            tasks = to_do_list_manager.get_tasks()\n",
        "            for i, task in enumerate(tasks):\n",
        "                print(f\"{i + 1}. {task.description}\")\n",
        "            task_number = int(input(\"Enter the task number to mark as completed: \")) - 1\n",
        "            if 0 <= task_number < len(tasks):\n",
        "                to_do_list_manager.mark_task_as_completed(tasks[task_number])\n",
        "                print(\"Task marked as completed!\")\n",
        "\n",
        "        elif choice == \"3\":\n",
        "            tasks = to_do_list_manager.get_tasks()\n",
        "            for i, task in enumerate(tasks):\n",
        "                print(f\"{i + 1}. {task.description}\")\n",
        "            task_number = int(input(\"Enter the task number to mark as pending: \")) - 1\n",
        "            if 0 <= task_number < len(tasks):\n",
        "                to_do_list_manager.mark_task_as_pending(tasks[task_number])\n",
        "                print(\"Task marked as pending!\")\n",
        "\n",
        "        elif choice == \"4\":\n",
        "            tasks = to_do_list_manager.get_tasks()\n",
        "            for i, task in enumerate(tasks):\n",
        "                print(f\"{i + 1}. {task.description}\")\n",
        "            task_number = int(input(\"Enter the task number to delete: \")) - 1\n",
        "            if 0 <= task_number < len(tasks):\n",
        "                to_do_list_manager.delete_task(tasks[task_number])\n",
        "                print(\"Task deleted!\")\n",
        "\n",
        "        elif choice == \"5\":\n",
        "            tasks = to_do_list_manager.get_tasks()\n",
        "            for i, task in enumerate(tasks):\n",
        "                print(f\"{i + 1}. {task}\")\n",
        "\n",
        "        elif choice == \"6\":\n",
        "            pending_tasks = to_do_list_manager.get_tasks(show_completed=False)\n",
        "            for i, task in enumerate(pending_tasks):\n",
        "                print(f\"{i + 1}. {task}\")\n",
        "\n",
        "        elif choice == \"7\":\n",
        "            break\n",
        "\n",
        "        else:\n",
        "            print(\"Invalid choice. Please try again.\")\n"
      ]
    }
